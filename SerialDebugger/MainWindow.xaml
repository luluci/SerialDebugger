<Window x:Class="SerialDebugger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialDebugger"
        mc:Ignorable="d"
        Title="MainWindow" Height="738.281" Width="785.937">
    <!--
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    -->
    <Grid>
        <Grid x:Name="BaseSerialData" Margin="0,34,0,98" Background="#FFDBF5FF">
            <TabControl>
                <TabItem Header="Tx">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">
                            <Grid x:Name="BaseSerialTx" Margin="15,0,15,0"/>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid x:Name="BaseLog" Height="34" VerticalAlignment="Top" Background="#FFE6FFD4">
            <Button x:Name="BtnSettings" Content="Button" Command="{Binding OnClickSerialSetting}" HorizontalAlignment="Left" Height="22" Margin="5,5,0,0" VerticalAlignment="Top" Width="55"/>
            <ComboBox ItemsSource="{Binding CommSettings}" DisplayMemberPath="Name" SelectedIndex="{Binding CommSettingsSelectIndex.Value}" HorizontalAlignment="Left" Margin="148,5,0,0" VerticalAlignment="Top" Width="235"/>
            <TextBlock HorizontalAlignment="Left" Margin="80,8,0,0" TextWrapping="Wrap" Text="設定ファイル:" VerticalAlignment="Top" FontFamily="Meiryo UI"/>
        </Grid>
        <Grid x:Name="BaseCtrl" Height="98" VerticalAlignment="Bottom" Background="#FFFFFFE1">


            <GroupBox Grid.Column="1" Header="log">
                <DockPanel>
                    <ItemsControl x:Name="log" ItemsSource="{Binding Log}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                </DockPanel>
            </GroupBox>

        </Grid>
    </Grid>
</Window>
